<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-4">
      <h2>Registro</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.text_field :name, placeholder: "Ingresa tu nombre", autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :user_name, placeholder: "Ingresa tu nombre de usuario", autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, placeholder: "Ingresa tu correo", autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">

        <%= f.password_field :password, placeholder: "Ingresa tu contraseña (minimo 6 caracteres)", autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder: "Confirma tu contraseña", autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
