<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-6">
      <h1>Nuevo Post</h1>
      <%= form_for @post do |f| %>
        <div class="form-group">
          <%= f.text_field :title, placeholder: "Ingresa el titulo del post", class: "form-control"%>
        </div>

        <div class="form-group">
          <%= f.text_area :body, placeholder: "Ingresa el cuerpo del post", class: "form-control"%>
        </div>

        <div class="form-group">
          <%= f.submit "Publicar", class: "btn btn-primary btn-block"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
