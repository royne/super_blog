<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <p><%= link_to '<i class="material-icons">reply_all</i> Volver a los post'.html_safe, root_path %></p>
      <h1><%= form_title  %></h1>
<!-- mensajes de error si no valida datos  -->
      <% if @post.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_for @post do |f| %>
        <div class="form-group">
          <%= f.text_field :title, placeholder: "Ingresa el titulo del post", class: "form-control"%>
        </div>

        <div class="form-group">
          <%= f.text_area :body, placeholder: "Ingresa el cuerpo del post", rows: 10, class: "form-control"%>
        </div>

        <div class="form-group">
          <%= f.submit "Publicar", class: "btn btn-primary btn-block"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
