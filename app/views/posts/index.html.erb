<div class="container">
  <div class="row ">
    <div class="col-sm-10">
      <h1>Entradas mas recientes!</h1>
      <% @posts.each do |post| %>
        <div class="card">
          <div class="card-header"><strong><%= post.title %></strong></div>
          <div class="card-body">
            <h4 class="card-title"><%= link_to post.title, post %></h4>
            <p class="card-text"><%= post.body %></p>
            <p class="font-italic text-secondary">Publicado por <strong><%= post.user.name %></strong>, <%= time_ago_in_words(post.created_at) %></p>
            <% if signed_in? && post.user == current_user %>
              <div class="text-right">
                <%= link_to 'Editar <i class="material-icons">create</i>'.html_safe, edit_post_path(post) %>
                <%= link_to 'Eliminar <i class="material-icons">delete_sweep</i>'.html_safe, post, method: :delete, data: { confirm: "¿Estás seguro de eliminar este post?" } %>
              </div>
            <% end %>
          </div>
        </div>
        <br>
      <% end %>
    </div>
  </div>
</div>
