<div class="container">
  <div class="row justify-content-arrow">
    <div class="col-sm-10">
      <h1>Entradas mas recientes!</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-around">
    <% @posts.each do |post| %>
      <div class="col-sm-6 col-md-4">
        <div class="card">
          <div class="card-header"><strong><%= markdown(post.title.capitalize) %></strong></div>
          <div class="card-body">
            <h4 class="card-title"><%= link_to markdown(post.title), post %></h4>
            <p class="card-text"><%= markdown(post.body[0..250]) %></p>
            <p class="font-italic text-secondary">Publicado por <strong><%= post.user.name %></strong>, <%= time_ago_in_words(post.created_at) %></p>
            <% if signed_in? && post.user == current_user %>
            <div class="text-right">
              <%= link_to 'Editar <i class="material-icons">create</i>'.html_safe, edit_post_path(post) %>
              <%= link_to 'Eliminar <i class="material-icons">delete_sweep</i>'.html_safe, post, method: :delete, data: { confirm: "¿Estás seguro de eliminar este post?" } %>
            </div>
            <% end %>
          </div>
        </div>
        <br>
      </div>
    <% end %>
  </div>
</div>
